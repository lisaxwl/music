/* pages/component/play.wxss */
.play_mask {
	position: fixed;
	bottom: 0;
	width: 100%;
 
}

.play_box {
  height: 100rpx;
  width: 100%;
  padding: 0 10rpx;
  position:fixed;
  bottom:0;
  background-color:rgba(255,255,255,0.9);
  display: flex;
  width:calc(100% - 0);
  border-top:1px solid #edefee;
}
.play_cover_img {
  width: 78rpx;
  height: 78rpx;
  border-radius: 5rpx;
  padding:10rpx 0;
  flex-grow:0;
}
.cover_img {
  width: 100%;
  height: 100%;
}
.play_song_title {
  font-size:24rpx;
  margin-left: 10rpx;
  margin-top: 22rpx;
   flex-grow:0;
}
.btns {
  flex-grow:1;
}
.play_btn {
  width: 60rpx;
  height: 60rpx;
  float: right;
  margin:20rpx 40rpx 20rpx 0;
  
}
.play {
  background:url("data:image/png;base64,");
   background-size:60rpx 60rpx;
}
